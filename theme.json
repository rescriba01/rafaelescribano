{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "base",
					"color": "#f4f4f4",
					"name": "Base"
				},
				{
					"slug": "contrast",
					"color": "#333333",
					"name": "Contrast"
				},
				{
					"slug": "contrast-soft",
					"color": "rgba(51, 51, 51, 0.2)",
					"name": "Contrast Soft"
				},
				{
					"slug": "primary",
					"color": "#0053a0",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#00a877",
					"name": "Secondary"
				},
				{
					"slug": "transparent",
					"color": "transparent",
					"name": "Transparent"
				}
			],
			"gradients": [
				{
					"slug": "primary-white",
					"gradient": "linear-gradient(#0053a0 49.9%,#fff 50%)",
					"name": "Primary color to white"
				},
				{
					"slug": "white-primary",
					"gradient": "linear-gradient(#fff 49.9%,#0053a0 50%)",
					"name": "Horizontal white to Primary color"
				}
			],
			"duotone": [
				{
					"colors": [ "#00a877", "#0053a0"],
					"slug": "secondary-primary",
					"name": "Secondary and primary"
				},
				{
					"colors": ["#0053a0", "#333333"],
					"slug": "primary-contrast",
					"name": "Primary and Contrast"
				}
			]
		},
		"layout": {
			"contentSize": "56.25rem",
			"wideSize": "87.5rem"
		},
		"spacing": {
			"padding": true,
			"margin": true,
			"blockGap": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ],
			"spacingSizes": {
				"30": {
					"name": "0.75rem",
					"size": "0.75rem",
					"slug": "30"
				},
				"40": {
					"name": "1.25rem",
					"size": "1.25rem",
					"slug": "40"
				},
				"50": {
					"name": "1.5rem",
					"size": "1.5rem",
					"slug": "50"
				},
				"60": {
					"name": "2rem",
					"size": "2rem",
					"slug": "60"
				},
				"70": {
					"name": "4rem",
					"size": "4rem",
					"slug": "70"
				}
			}
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"name": "System",
					"slug": "system",
					"fontFamily": "-apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif"
				},
				{
					"name": "Serif",
					"slug": "serif",
					"fontFamily": "\"Times New Roman\",\"New York\",Times,\"Noto Serif\",serif"
				},
				{
					"name": "Monospace",
					"slug": "monospace",
					"fontFamily": "Consolas,Menlo,Monaco,\"SF Mono\",\"DejaVu Sans Mono\",\"Roboto Mono\",\"Courier New\",Courier,monospace"
				},
				{
					"fontFamily": "\"Cardo\", serif",
					"name": "Cardo",
					"slug": "cardo",
					"fontFace": [
						{
							"fontFamily": "Cardo",
							"fontWeight": "400",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/cardo/cardo_normal_400.woff2" ],
							"fontDisplay": "swap"
						},
						{
							"fontFamily": "Cardo",
							"fontWeight": "700",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/cardo/cardo_normal_700.woff2" ],
							"fontDisplay": "swap"
						},
						{
							"fontFamily": "Cardo",
							"fontWeight": "400",
							"fontStyle": "italic",
							"src": [ "file:./assets/fonts/cardo/cardo_italic_400.woff2" ],
							"fontDisplay": "swap"
						}
					]
				},
				{
					"fontFamily": "\"Instrument Sans\", sans-serif",
					"name": "Instrument Sans",
					"slug": "instrument-sans",
					"fontFace": [
						{
							"fontFamily": "Instrument Sans",
							"fontWeight": "100 900",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/instrument-sans/InstrumentSans-VariableFont_wdth,wght.woff2" ],
							"fontDisplay": "swap"
						},
						{
							"fontFamily": "Instrument Sans",
							"fontWeight": "100 900",
							"fontStyle": "italic",
							"src": [ "file:./assets/fonts/instrument-sans/InstrumentSans-Italic-VariableFont_wdth,wght.woff2" ],
							"fontDisplay": "swap"
						}
					]
				},
				{
					"fontFamily": "\"Inter\", sans-serif",
					"name": "Inter",
					"slug": "inter",
					"fontFace": [
						{
							"fontFamily": "Inter",
							"fontWeight": "100 900",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/inter/Inter-VariableFont_slnt,wght.woff2" ],
							"fontDisplay": "swap"
						}
					]
				},
				{
					"fontFamily": "\"Jost\", sans-serif",
					"name": "Jost",
					"slug": "jost",
					"fontFace": [
						{
							"fontFamily": "Jost",
							"fontWeight": "100 900",
							"fontStyle": "normal",
							"src": [ "file:./assets/fonts/jost/Jost-VariableFont_wght.woff2" ],
							"fontDisplay": "swap"
						},
						{
							"fontFamily": "Jost",
							"fontWeight": "100 900",
							"fontStyle": "italic",
							"src": [ "file:./assets/fonts/jost/Jost-Italic-VariableFont_wght.woff2" ],
							"fontDisplay": "swap"
						}
					]
				}
			],
			"fontSizes": [
				{
					"slug": "display",
					"size": "5.625rem",
					"name": "Display",
					"fluid": {
						"min": "3rem",
						"max": "10rem"
					},
					"lineHeight": "1.25"
				},
				{
					"slug": "small",
					"size": "1.255rem",
					"name": "Small",
					"fluid": {
						"min": "1.005rem",
						"max": "1.25rem"
					}
				},
				{
					"slug": "medium",
					"size": "1.5rem",
					"name": "Medium",
					"fluid": {
						"min": "1.255rem",
						"max": "1.5rem"
					}
				},
				{
					"slug": "large",
					"size": "2rem",
					"name": "Large",
					"fluid": {
						"min": "1.75rem",
						"max": "2rem"
					}
				},
				{
					"slug": "x-large",
					"size": "2.75rem",
					"name": "XL",
					"fluid": {
						"min": "2.5rem",
						"max": "2.75rem"
					}
				},
				{
					"slug": "xx-large",
					"size": "3.75rem",
					"name": "XXL",
					"fluid": {
						"min": "3rem",
						"max": "3.75rem"
					}
				}
			]
		},
		"useRootPaddingAwareAlignments": false
	},
	"styles": {
		"blocks": {
			"core/columns": {
				"css": ".intro-with-links .introduction {padding-inline-start: 1.5em;}"
			},
			"core/code": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				}
			},
			"core/comment-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-edit-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-comments-form": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/comment-reply-link": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/navigation": {
				"css": "&.site-header__nav{padding-inline-end:1em;} & button[aria-haspopup='dialog']{display:none !important;} & .wp-block-navigation__responsive-container-open,& .wp-block-navigation__responsive-container-close{display:none !important;} & .wp-block-navigation__responsive-container{position:static;display:block;background:transparent;width:100%;} & .wp-block-navigation-item{font-family:var(--wp--preset--font-family--inter);} @media (max-width:600px){& .wp-block-navigation__container{flex-direction:row;align-items:center;justify-content:center;}}",
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				},
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						"typography": {
							"fontSize": "var(--wp--preset--font-size--medium)",
							"textDecoration": "none"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--contrast)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						":focus": {
							"color": {
								"text": "var(--wp--preset--color--contrast)"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--contrast)"
							}
						}
					}
				}
			},
			"core/post-author-name": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-content": {
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--60)",
						"bottom": "var(--wp--preset--spacing--60)"
					}
				}
			},
			"core/post-date": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/post-excerpt": {
				"elements": {
					"link": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--small)"
						}
					}
				}
			},
			"core/post-featured-image": {
				"spacing": {
					"margin": {
						"bottom": "var(--wp--preset--spacing--40)"
					}
				}
			},
			"core/post-template": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--50)",
						"bottom": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/query-pagination": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--50)"
					}
				}
			},
			"core/search": {
				"css": ".wp-block-search__button-inside .wp-block-search__inside-wrapper{border: none;}",
				"typography": {
					"lineHeight": "1"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontFamily": "var(--wp--preset--font-family--inter)",
					"fontWeight": "400"
				}
			},
			"core/image": {
				"css": "&.is-style-rounded img{border-radius:50%;} &.site-header__logo img{border-radius:50%;} @media (max-width:600px){&.site-header__logo img{margin-inline-start:6px;margin-block-start:5px;margin-block-end:5px;}}"
			},
			"core/group": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--50)"
				},
				"css": ".site-header{outline:1px solid var(--wp--preset--color--contrast);border-radius:2rem;gap:10px !important;} .re-work-employer { margin-block: 0; }"
			}
		},
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": "var(--wp--preset--color--contrast)"
		},
		"elements": {
			"button": {
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--30)",
						"right": "var(--wp--preset--spacing--30)",
						"bottom": "var(--wp--preset--spacing--30)",
						"left": "var(--wp--preset--spacing--30)"
					}
				},
				"border": {
					"color": "var(--wp--preset--color--transparent)",
					"width": "4px",
					"style": "solid",
					"radius": "4px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--contrast)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "700"
				},
				"shadow": "var(--wp--preset--shadow--natural)",
				":hover": {
					"border": {
						"color": "var(--wp--preset--color--secondary)"
					}
				}
			},
			"caption": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"cite": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				}
			},
			"link": {
				"color": {
					"text": "var(--wp--preset--color--contrast)"
				},
				"css": ".site-header__logo.wp-block-image a{display:block !important;}",
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				},
				":active": {
					"color": {
						"text": "var(--wp--preset--color--contrast)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--jost)",
					"fontWeight": "700",
					"lineHeight": "1.25"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--jost)",
					"fontWeight": "700",
					"lineHeight": "1.25"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--jost)",
					"fontWeight": "700",
					"lineHeight": "1.25"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--jost)",
					"fontWeight": "700",
					"lineHeight": "1.25"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--jost)",
					"fontWeight": "700",
					"lineHeight": "1.25"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--jost)",
					"fontWeight": "700",
					"lineHeight": "1.25"
				}
			}
		},
		"spacing": {
			"padding": {
				"top": "0",
				"bottom": "0"
			}
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--medium)",
			"fontFamily": "var(--wp--preset--font-family--inter)",
			"lineHeight": "1.5"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "no-title",
			"title": "No title",
			"postTypes": [ "post","page" ]
		},
		{
			"name": "single-work",
			"title": "Single Work",
			"postTypes": [ "work" ]
		}
	]
}
